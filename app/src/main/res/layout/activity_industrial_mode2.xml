<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".IndustrialMode" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_1c1c1c"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/ibtnmmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1c1c1c"
            android:contentDescription="@string/i_btn_mmode_contentdescription"
            android:src="@drawable/i_btn_mm_1" />

        <ImageButton
            android:id="@+id/ibtnpmmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1c1c1c"
            android:contentDescription="@string/i_btn_pmmode_contentdescription"
            android:src="@drawable/i_btn_pmm_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1c1c1c"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_1c1c1c"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_Temperature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="00.0℃"
                android:textColor="#FFFFFF"
                android:textSize="56sp" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="230dp"
                android:background="#000000"
                android:orientation="vertical"
                android:visibility="visible" 
                android:id="@+id/graph1">

                <!-- 放趨勢圖 -->
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:stretchColumns="0,1" >

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/maximum" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/i_maximum_icon" />

                            <TextView
                                android:id="@+id/txt_MaxTemperature"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="right"
                                android:text="00.0℃"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#00cbad" />

                        </LinearLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/minimum" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/i_minimum_icon" />

                            <TextView
                                android:id="@+id/txt_MinTemperature"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="right"
                                android:text="00.0℃"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#00cbad" />

                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/max_min" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/i_max_min_icon" />

                            <TextView
                                android:id="@+id/txt_MaxMinTemperature"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="right"
                                android:text="00.0℃"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#00cbad" />

                        </LinearLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/average" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/i_average_icon" />

                            <TextView
                                android:id="@+id/txt_AvgTemperature"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="right"
                                android:text="00.0℃"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#00cbad" />

                        </LinearLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>