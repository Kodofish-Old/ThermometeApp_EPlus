<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".IndustrialMode" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_1c1c1c"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/ibtnmmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1c1c1c"
            android:contentDescription="@string/i_btn_mmode_contentdescription"
            android:src="@drawable/i_btn_mm_2" />

        <ImageButton
            android:id="@+id/ibtnpmmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1c1c1c"
            android:contentDescription="@string/i_btn_pmmode_contentdescription"
            android:src="@drawable/i_btn_pmm_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1c1c1c"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_1c1c1c"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_Temperature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="00.0℃"
                android:textColor="#FFFFFF"
                android:textSize="56sp" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="230dp"
                android:background="#000000"
                android:orientation="vertical"
                android:visibility="visible" 
                android:id="@+id/graph1">

<!--  放趨勢圖 -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/i_maximum_icon" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/peak" />

                <TextView
                    android:id="@+id/txt_PeakTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="00.0℃"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#00cbad" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>